{
  "name": "motr-back",
  "version": "1.0.0",
  "description": "Proyecto para el seguimiento de rutas de transporte publico",
  "repository": {
    "type": "git",
    "url": "https://gitlab.com/carlosmjimenez/MOTR"
  },
  "author": "Carlos Jimenez",
  "license": "MIT",
  "scripts": {
    "build": "npm run build-sass && npm run build-ts && npm run tslint && npm run copy-static-assets",
    "start": "npm run serve",
    "serve": "NODE_ENV=production node dist/index.js",
    "dev": "npm run serve-dev",
    "serve-dev": "nodemon dist/index.js",
    "postinstall": "npm run build",
    "start-api": "npm run serve-api",
    "start-tcp": "npm run serve-tcp",
    "serve-api": "node dist/api/server.js",
    "serve-tcp": "node dist/tcp-ip/server.js",
    "build-ts": "tsc",
    "build-sass": "node-sass src/Public/css/main.scss dist/Public/css/main.css",
    "copy-static-assets": "ts-node copyStaticAssets.ts",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "dependencies": {
    "body-parser": "^1.18.2",
    "compression": "^1.7.1",
    "db-migrate": "^0.11.1",
    "db-migrate-mysql": "^1.1.10",
    "dotenv": "^4.0.0",
    "errorhandler": "^1.5.0",
    "express": "^4.16.3",
    "express-flash": "0.0.2",
    "express-session": "^1.15.6",
    "express-validator": "^4.3.0",
    "lusca": "^1.5.2",
    "pug": "^2.0.0-rc.4",
    "reflect-metadata": "^0.1.12",
    "sequelize": "^4.38.0",
    "sequelize-typescript": "^0.6.6",
    "winston": "^2.4.0"
  },
  "devDependencies": {
    "@types/compression": "^0.0.35",
    "@types/errorhandler": "^0.0.32",
    "@types/dotenv": "^4.0.2",
    "@types/express": "^4.11.1",
    "@types/express-session": "^1.15.8",
    "@types/jquery": "^3.2.17",
    "@types/lusca": "^1.5.0",
    "@types/node": "^9.4.6",
    "@types/shelljs": "^0.7.8",
    "@types/winston": "^2.3.7",
    "nodemon": "^1.13.0",
    "node-sass": "^4.7.2",
    "shelljs": "^0.8.1",
    "ts-node": "^5.0.0",
    "tslint": "^5.9.1",
    "typescript": "^2.7.2"
  }
